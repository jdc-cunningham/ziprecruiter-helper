{
  "name": "ZipRecruiter Job Board Helper",
  "version": "1.0",
  "description": "Get that job scrub",
  "manifest_version": 2,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.ziprecruiter.com/jobseeker/home?*"],
      "run_at": "document_start",
      "js": ["script-loader.js"],
      "css": ["zr.css"]
    }
  ],
  "web_accessible_resources": ["meta.js", "zr.js"]
}